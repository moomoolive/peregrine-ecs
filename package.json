{
  "name": "peregrine-ecs",
  "version": "0.1.0",
  "description": "a multi-threaded, archetypal ecs",
  "main": "index.js",
  "scripts": {
    "build:node": "tsc --project ./buildTools/tsconfig.dist.json",
    "build": "npm run build:node",
    "prepare": "husky install",
    "pre-commit": "npm run test && npm run build && git add -A",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --watchAll",
    "test:dev": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ./src/ecs/tagComponents --runInBand --watchAll",
    "ci": "npm i && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moomoolive/peregrine-ecs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moomoolive/peregrine-ecs/issues"
  },
  "homepage": "https://github.com/moomoolive/peregrine-ecs#readme",
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@types/jest": "^27.4.1",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@thi.ng/malloc": "^6.1.6"
  }
}
